<script type="text/javascript">
    //<![CDATA[
    $(document).ready(function() {
        $('input[name="paciente[data_nascimento]"]').setMask('date'); // data nascimento
        $('input[name="paciente[endereco_attributes][cep]"]').setMask('cep'); // cep
        $('input[name="paciente[idade]"]').setMask('999'); // idade
        $('input[name="paciente[cpf]"]').setMask('cpf'); // CPF
        $('input[name="paciente[tel_comercial]"]').setMask('phone'); // comercial
        $('input[name="paciente[tel_celular]"]').setMask('phone'); // celular
        $('input[name="paciente[tel_residencia]"]').setMask('phone'); // residencial
        $('input[name="paciente[name]"]').css("text-transform",'lowercase');
        $('input[name="paciente[rg]"]').css("text-transform",'uppercase');

    });
    //]]>
</script>
<%= form.text_field :cpf, :size=>"11", :maxlength=>"14" %>&nbsp;RG
<%= form.text_field :rg, :size=>"15", :maxlength=>"15" %>


