				<tr class=<%=cor%> title='EXISTE PELO MENOS UM DELETE ?'>
					<td>
						EXISTE PELO MENOS UM DELETE ?
					</td>
					<td style='text-align:center;'>
						<%= existe_delete?(total_coluna[1]) %>
					</td>
